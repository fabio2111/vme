<?xml version="1.0"?>
<entity-mappings xmlns="http://www.apache.org/openjpa/ns/orm/extendable"
	xmlns:openjpa="http://www.apache.org/openjpa/ns/orm" xmlns:orm="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">

	<openjpa:openjpa-version version="1.0" />
	
	<package>org.acme</package>
	
	<mapped-superclass class="TestModel$Super"/>

	<entity class="TestModel$PIEntity" name="entity">
		<attributes>
			<id name="id">
				<orm:generated-value strategy="AUTO" />
			</id>
			<basic name="name">
				<openjpa:basic externalizer="toString"
					factory="javax.xml.namespace.QName.valueOf" />
			</basic>
			<one-to-many name="deps" fetch="EAGER">
				<orm:join-column name="entity" />
				<orm:cascade>
					<orm:cascade-all />
				</orm:cascade>
			</one-to-many>
			<one-to-one name="dep">
				<orm:cascade>
					<orm:cascade-all />
				</orm:cascade>
			</one-to-one>
			<embedded name="container"/>
		</attributes>
	</entity>

	<entity class="TestModel$Sub" name="sub"/>
	
	<entity class="TestModel$Dep" name="dep">
		<attributes>
			<id name="depid">
				<orm:generated-value strategy="AUTO" />
			</id>
		</attributes>
	</entity>

	<entity class="TestModel$Dep2">
		<attributes>
			<id name="depid">
				<orm:generated-value strategy="AUTO" />
			</id>
		</attributes>
	</entity>

	<entity class="TestModel$Element" name="element"/>

	<embeddable class="TestModel$Container">
		<attributes>
			<orm:one-to-many name="elements" fetch="EAGER">
				<orm:join-column name="entity" />
				<orm:cascade>
					<orm:cascade-all />
				</orm:cascade>
			</orm:one-to-many>
		</attributes>
	</embeddable>

</entity-mappings>