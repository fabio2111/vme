<?xml version="1.0"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="test">

		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		
		<class>org.acme.TestModel$PIEntity</class>
		<class>org.acme.TestModel$Sub</class>
		<class>org.acme.TestModel$Dep</class>
		<class>org.acme.TestModel$Dep2</class>
		<class>org.acme.TestModel$Container</class>
		<class>org.acme.TestModel$Element</class>

		<properties>
			<property name="openjpa.ConnectionURL" value="jdbc:derby:memory:test;create=true" />
			<property name="openjpa.ConnectionDriverName" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="openjpa.jdbc.MappingDefaults"
				value="FieldStrategies='javax.xml.namespace.QName=org.acme.QNameHandler'" />
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
			<property name="openjpa.Log" value="slf4j" />
		</properties>

	</persistence-unit>

</persistence>
