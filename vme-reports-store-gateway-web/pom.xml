<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>vme</artifactId>
		<groupId>org.vme</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>vme-reports-store-gateway-web</artifactId>
	<packaging>war</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.gcube.application.rsg</groupId>
			<artifactId>reports-store-gateway-interface-dto</artifactId>
			<version>[0.0.4-SNAPSHOT]</version>
		</dependency>
		<dependency>
			<groupId>org.gcube.application.rsg</groupId>
			<artifactId>
				reports-store-gateway-support-compiler
			</artifactId>
			<version>[0.0.4-SNAPSHOT]</version>
		</dependency>
		<dependency>
			<groupId>org.gcube.application.rsg</groupId>
			<artifactId>reports-store-gateway-web-base</artifactId>
			<version>[0.0.4-SNAPSHOT]</version>
		</dependency>
		<dependency>
			<groupId>org.vme</groupId>
			<artifactId>vme-reports-store-gateway</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>javax.el</groupId>
			<artifactId>el-api</artifactId>
			<version>2.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.weld.servlet</groupId>
			<artifactId>weld-servlet</artifactId>
			<version>2.1.0.Final</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>reports-store-gateway-web</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<inherited>true</inherited>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat6-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<url>http://hqldvfigis1:6969/manager</url>
					<server>DEV-Server</server>
					<path>/figis#reports-store-gateway</path>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>env-dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>

				<javax.persistence.jdbc.driver.vme>org.h2.Driver</javax.persistence.jdbc.driver.vme>
				<javax.persistence.jdbc.url.vme>jdbc:h2:mem:vme</javax.persistence.jdbc.url.vme>
				<javax.persistence.jdbc.user.vme>sa</javax.persistence.jdbc.user.vme>
				<javax.persistence.jdbc.password.vme></javax.persistence.jdbc.password.vme>
				<hibernate.dialect.vme>org.hibernate.dialect.H2Dialect</hibernate.dialect.vme>
				<hibernate.hbm2ddl.auto.vme>create</hibernate.hbm2ddl.auto.vme>
				<!--validate | update | create | create-drop -->

				<javax.persistence.jdbc.driver.figis>org.h2.Driver</javax.persistence.jdbc.driver.figis>
				<javax.persistence.jdbc.url.figis>jdbc:h2:mem:;INIT=create schema IF
					NOT EXISTS FIGIS</javax.persistence.jdbc.url.figis>
				<javax.persistence.jdbc.user.figis>sa</javax.persistence.jdbc.user.figis>
				<javax.persistence.jdbc.password.figis></javax.persistence.jdbc.password.figis>
				<hibernate.dialect.figis>org.hibernate.dialect.H2Dialect</hibernate.dialect.figis>
				<hibernate.hbm2ddl.auto.figis>create</hibernate.hbm2ddl.auto.figis>
			</properties>
		</profile>
	</profiles>
</project>
